class Solution {
  public:
    int maxWater(vector<int> &arr) {
        // code here
        int n=arr.size();
        int left=0;
        int right=n-1;
        int maxwater=0;
        if(n<=1)
        {
            return 0;
        }
        
        while(left<right)
        {
            int width=right-left;
            int hight=min(arr[left],arr[right]);
            int water=width*hight;
             maxwater=max(maxwater,water);
            if(arr[left]<arr[right])
            {
                left++;
            }
            else{
                right--;
            }
           
        }
        return maxwater;
    }
};
