class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        // Code here
        int sum=0;
        int maxsum=INT_MIN;
        int n=arr.size();
        for(int i=0;i<n;i++)
        {
            if(sum<0)
            {
                
                sum=0;
            }
                sum=sum+arr[i];
                maxsum=max(sum,maxsum);
            
        }
       
        return maxsum;
    }
};
