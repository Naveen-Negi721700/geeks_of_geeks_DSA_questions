class Solution {
  public:

    // Function to rotate an array by d elements in counter-clockwise direction.
    void rotateArr(vector<int>& arr, int d) {
    // code here
    int n=arr.size();
    int ans[n];
    d=d%n;
    int indx=0;
    for(int i=d;i<n;i++)
    {
        ans[indx]=arr[i];
        indx++;
    }
    for(int k=0;k<d;k++)
    {
        ans[indx]=arr[k];
        indx++;
    }
    for(int i=0;i<n;i++)
    {
        arr[i]=ans[i];
    }
    }
};
