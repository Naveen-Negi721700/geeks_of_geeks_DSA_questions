/*
class Node {
public:
    int data;
    Node *left;
    Node *right;

    Node(int x) {
        data = x;
        left = NULL;
        right = NULL;
    }
};
*/

class Solution {
  public:
    int search(vector<int> &inorder ,int left,int right ,int val)
    {
        for(int i=left;i<=right;i++)
        {
            if(inorder[i]==val)
            {
                return i;
            }
        }
        return -1;
    }
    Node * helper(vector<int> &inorder, vector<int> &preorder ,int &preind,int left,int right)
    {
     if(left>right)
     {
         return NULL ;
     }
     Node*root=new Node(preorder[preind]);
    int indx= search(inorder,left,right,preorder[preind]);
     preind++;
    root->left= helper(inorder,preorder,preind,left,indx-1);
     root->right= helper(inorder,preorder,preind,indx+1,right);
     return root;
    }
    Node *buildTree(vector<int> &inorder, vector<int> &preorder) {
        // code here
        int preind=0;
        return helper(inorder,preorder,preind,0,inorder.size()-1);
    }
};
