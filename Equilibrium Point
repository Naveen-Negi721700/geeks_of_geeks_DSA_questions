class Solution {
  public:
    // Function to find equilibrium point in the array.
    int findEquilibrium(vector<int> &arr) {
        // code here
        int totalsum=0;
        for(int num:arr)
        {
            totalsum+=num;
        }
        int leftsum=0;
        for(int i=0;i<arr.size();i++)
        {
            int rightsum=totalsum-leftsum-arr[i];
            if(rightsum==leftsum)
            {
                return i;
            }
            leftsum+=arr[i];
        }
        return -1;
    }
};
