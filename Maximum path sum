/*
class Node {
public:
    int data;
    Node *left;
    Node *right;

    Node(int val) {
        data = val;
        left = right = NULL;
    }
};
*/
class Solution {
  public:
    int maximum=INT_MIN;
  int helper(Node *root)
  {
      if(root==NULL)
      {
          return 0;
      }
     int left=max(0, helper(root->left));
     int right=max(0, helper(root->right));
     int current=root->data+left+right;
     maximum=max(current,maximum);
     return root->data+max(left,right);
     
  }
    int findMaxSum(Node *root) {
        // code here
    
        helper(root);
        return maximum;
    }
};
