class Solution {
  public:
    int evaluatePostfix(vector<string>& arr) {
        // code here
        stack<long long >s;
        for(auto &token:arr)
        {
            long long result=0;
            if(token=="+"||token=="-"||token=="/"||token=="*"|| token=="^")
            {
                long long b=s.top();
                s.pop();
                long long a=s.top();
                s.pop();
                if(token=="+")
                {
                    result= a+b;
                }else if(token=="-")
                {
                    result= a-b;
                }
                else if(token=="*")
                {
                    result= a*b;
                }else if(token=="/"){
                  
                    if(a*b<0 && a%b!=0)
                    {
                        result= a/b-1;
                    }else{
                        result= a/b;
                    }
                }
                else{ 
                {
                    result=pow(a,b);
                }
                    
                }
                
                s.push(result);
                
            }
            else{
                s.push(stoi(token));
            }
        }
        return s.top();
        
    }
};
