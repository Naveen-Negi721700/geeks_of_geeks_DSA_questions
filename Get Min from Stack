class SpecialStack {
  public:
  stack<pair<int,int>>s;
    SpecialStack() {
        // Define Stack
    }

    void push(int x) {
        // Add an element to the top of Stack
        if(s.empty())
        {
            s.push({x,x});
        }else{
            int minimum=min(x,s.top().second);
            s.push({x,minimum});
            
        }
    }

    void pop() {
        // Remove the top element from the Stack
        if(!s.empty()){
        s.pop();}
    }

    int peek() {
        // Returns top element of the Stack
    if(s.empty())
    {
        return -1;
    }
       return s.top().first;
    }

    bool isEmpty() {
        // Check if stack is empty
     return s.empty();
    }

    int getMin() {
        // Finds minimum element of Stack
    if(s.empty())
    {
        return -1;
    }
        return s.top().second;
    }
};
